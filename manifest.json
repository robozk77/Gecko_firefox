{
  "manifest_version": 2,
  "name": "Gecko",
  "description": "Automated CSPT discovery tool",
  "version": "1.5.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "gecko@gecko.cspt",
      "strict_min_version": "57.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}